<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${package}.${moduleName}.mapper.${className}Mapper">

    <resultMap id="${classname}Map" type="${package}.${moduleName}.entity.${className}">
        #foreach ($column in $columns)
            #if($column.columnName == $pk.columnName)
                <id column="${column.columnName}" property="${column.attrname}" jdbcType="${column.dataType}"/>
            #else
                <result column="${column.columnName}" property="${column.attrname}" jdbcType="${column.dataType}"/>
            #end
        #end
    </resultMap>


    <delete id="deleteById" parameterType="java.lang.String">
       DELETE FROM
			${tableName} t
		WHERE
			t.$pk.columnName = #{${pk.attrname}}
    </delete>


    <update id="updateById" parameterType="${package}.${moduleName}.model.${className}Model">
        UPDATE ${tableName} t
        <set>
           #foreach ($column in $columns)
            <if test="param..${column.attrname} != null">
                t.${column.columnName} = #{param.${column.attrname}},
            </if>
           #end
        </set>
        WHERE
        t.$pk.columnName = #{param.${pk.attrname}}
    </update>


    <select id="selectById" resultMap="${classname}Map" parameterType="java.lang.String">
        SELECT * FROM
        ${tableName} t
        WHERE t.$pk.columnName = #{${pk.attrname}}
    </select>


    <select id="selectPage" resultMap="${classname}Map" parameterType="${package}.${moduleName}.param.${className}Param">
        SELECT *
        FROM ${tableName} t
        WHERE
        1 = 1
        #foreach ($column in $columns)
            <if test="param.${column.attrname} != null">
                AND t.${column.columnName} = #{param.${column.attrname}}
            </if>
        #end
    </select>


</mapper>